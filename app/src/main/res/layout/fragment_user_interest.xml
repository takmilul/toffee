<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.login.UserInterestFragment" >
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        
        <TextView
            android:id="@+id/text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Select at least 3 of your interests"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />
        
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/interestChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:singleSelection="false"
            app:singleLine="false"
            app:chipSpacingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_tv" />
        
        <Button
            android:id="@+id/confirm_btn"
            style="@style/ButtonStyleSolidPink"
            android:layout_width="@dimen/button_accent_width"
            android:layout_marginTop="24dp"
            android:text="@string/sign_in_text"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="@id/text_tv"
            app:layout_constraintStart_toStartOf="@id/text_tv"
            app:layout_constraintTop_toBottomOf="@id/interestChipGroup" />
        
        <TextView
            android:id="@+id/skipButton"
            style="@style/ViewAllTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/skip_text"
            android:textAllCaps="true"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/roboto_bold"
            app:drawableEndCompat="@drawable/ic_right_arrow"
            app:layout_constraintTop_toBottomOf="@id/confirm_btn"
            app:layout_constraintStart_toStartOf="@id/text_tv"
            app:layout_constraintEnd_toEndOf="@id/text_tv"/>
    
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>