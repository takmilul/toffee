<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="data"
            type="com.banglalink.toffee.model.Package" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/cardBgColor"
        app:cardCornerRadius="@dimen/pack_corner_radius"
        android:elevation="5dp"
        android:layout_margin="5dp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="1dp">

            <ImageView
                android:id="@+id/package_badge_icon"
                loadImageFromUrlRounded="@{data.mobileLogo}"
                android:layout_width="92dp"
                android:layout_height="85dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/txt_badge_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_free_package" />

            <TextView
                android:id="@+id/package_name_tv"
                style="@style/subscription_pack_header_style"
                android:layout_width="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@{data.packageName}"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="@+id/package_badge_icon"
                tools:text="@string/free_trial" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/check_dimen"
                android:layout_height="@dimen/check_dimen"
                android:contentDescription="@string/txt_check"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check" />

            <TextView
                android:id="@+id/package_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:textColor="@color/main_text_color"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/package_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/package_name_tv"
                tools:text="Enjoy 30 days of tv" />

            <TextView
                android:id="@+id/expiry_tv"
                packageExpiryText="@{data}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textColor="@color/main_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/package_description_tv"
                app:layout_constraintTop_toBottomOf="@id/package_description_tv"
                tools:text="24 days left" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="230dp"
                app:layout_constraintGuide_percent="@dimen/guide_line_width_percent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

