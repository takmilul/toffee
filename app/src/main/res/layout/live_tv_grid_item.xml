<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <ImageView
        android:id="@+id/icon"
        loadChannelImage="@{data}"
        android:layout_width="@dimen/channel_width"
        android:layout_height="@dimen/channel_height"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_white_bg"
        android:src="@mipmap/ic_menu_channel" />

    <ImageView
        android:id="@+id/premium_icon"
        togglePremiumIcon="@{data}"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/ic_vip_badge" />
</FrameLayout>

