<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="selectedPosition"
            type="java.lang.Integer" />

        <variable
            name="callback"
            type="com.banglalink.toffee.ui.common.CheckboxCheckedChangedListener" />

        <variable
            name="position"
            type="java.lang.Integer" />

        <variable
            name="data"
            type="com.banglalink.toffee.model.PaymentMethod" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:clipToPadding="false"
        android:onClick="@{() -> callback.onCheckedChanged(checkBox, data, position, false)}"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_checkbox"
                android:button="@null"
                android:checked="@{position.equals(selectedPosition)}"
                android:onClick="@{(view) -> callback.onCheckedChanged(view, data, position, true)}"
                android:text="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/bankNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@{data.bankName}"
                app:layout_constraintEnd_toStartOf="@id/options"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toEndOf="@+id/checkBox"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Brac Bank Limited" />

            <TextView
                android:id="@+id/accountNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@{data.accountName}"
                app:layout_constraintEnd_toStartOf="@id/options"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/bankNameTextView"
                app:layout_constraintTop_toBottomOf="@+id/bankNameTextView"
                tools:text="John Doe the Great" />

            <TextView
                android:id="@+id/accountNumberTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@{data.accountNumber}"
                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@id/options"
                app:layout_constraintStart_toStartOf="@+id/bankNameTextView"
                app:layout_constraintTop_toBottomOf="@id/accountNameTextView"
                tools:text="**** - **** - **** - 2569" />

            <ImageView
                android:id="@+id/options"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/bankNameTextView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_menu_more" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>