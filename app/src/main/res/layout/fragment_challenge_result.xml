<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.challenge.ChallengeResultFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.banglalink.toffee.ui.challenge.ChallengeResultViewModel" />
    </data>

    <com.banglalink.toffee.ui.widget.NestedCoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/screen_bg_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <com.banglalink.toffee.ui.widget.CustomImageView
                    android:id="@+id/poster"
                    loadImageFromUrl="@{viewModel.data.posterUrl}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:minHeight="200dp"
                    android:contentDescription="@string/txt_poster"
                    android:src="@drawable/placeholder"
                    app:layout_constraintDimensionRatio="W,16:9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="8dp"
                    android:text="@{viewModel.data.viewCount}"
                    android:textColor="@color/second_text_color"
                    app:drawableStartCompat="@drawable/ic_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/poster"
                    tools:text="10K" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:text="@{viewModel.data.commentCount}"
                    android:textColor="@color/second_text_color"
                    app:drawableStartCompat="@drawable/ic_share"
                    app:layout_constraintEnd_toStartOf="@+id/textView9"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:text="@{viewModel.data.reactionCount}"
                    android:textColor="@color/second_text_color"
                    app:drawableStartCompat="@drawable/ic_reactions_emo"
                    app:layout_constraintEnd_toStartOf="@id/fullScreenButton"
                    app:layout_constraintStart_toEndOf="@id/textView8"
                    app:layout_constraintTop_toTopOf="@+id/textView5" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/fullScreenButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_full_screen"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textView5" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView2"
                    loadImageFromUrlRounded="@{viewModel.data.logoUrl}"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:contentDescription="@string/txt_profile_image"
                    android:layout_marginTop="32dp"
                    app:srcCompat="@drawable/ic_profile_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView5" />

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@{viewModel.data.ownerName}"
                    android:textColor="@color/second_text_color"
                    app:layout_constraintEnd_toEndOf="@+id/circleImageView2"
                    app:layout_constraintStart_toStartOf="@+id/circleImageView2"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
                    tools:text="AsianStar" />

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@{viewModel.data.challengeTitle}"
                    android:textSize="@dimen/default_text_size"
                    app:layout_constraintEnd_toEndOf="@+id/circleImageView2"
                    app:layout_constraintStart_toStartOf="@+id/circleImageView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView45"
                    tools:text="Water Challenge" />

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="@{viewModel.data.challengeDescription}"
                    app:layout_constraintEnd_toEndOf="@+id/circleImageView2"
                    app:layout_constraintStart_toStartOf="@+id/circleImageView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView46"
                    tools:text="Water your plant, share the video &amp; win \n awesome prizes &amp; become famous!" />

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@{viewModel.data.hashTag}"
                    android:textColor="@color/purple"
                    app:layout_constraintEnd_toEndOf="@+id/circleImageView2"
                    app:layout_constraintStart_toStartOf="@+id/circleImageView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView47"
                    tools:text="#WaterChallenge" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/rewardView"
                    android:name="com.banglalink.toffee.ui.challenge.ChallengeResultRewardWinnerFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView49" />

                <TextView
                    android:id="@+id/remainingTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="15sp"
                    android:text="@{viewModel.data.remainingTime}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rewardView"
                    app:layout_constraintBottom_toTopOf="@id/joinButton"
                    tools:text="Challenge Closed" />

                <Button
                    android:id="@+id/joinButton"
                    style="@style/ButtonStyleSolidPink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Join Challenge"
                    app:layout_constraintBottom_toTopOf="@id/watchEntryButton"
                    app:layout_constraintEnd_toEndOf="@+id/remainingTimeTextView"
                    app:layout_constraintStart_toStartOf="@+id/remainingTimeTextView"
                    app:layout_constraintTop_toBottomOf="@id/remainingTimeTextView" />

                <Button
                    android:id="@+id/watchEntryButton"
                    style="@style/ButtonStyleSolidPurple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Watch Your Entry"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/remainingTimeTextView"
                    app:layout_constraintStart_toStartOf="@+id/remainingTimeTextView"
                    app:layout_constraintTop_toBottomOf="@id/joinButton" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/bottomPanel"
            android:name="com.banglalink.toffee.ui.challenge.ChallengeResultVideosFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </com.banglalink.toffee.ui.widget.NestedCoordinatorLayout>
</layout>