<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:gravity="center">
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/cardBgColor"
            app:cardCornerRadius="24dp">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <ImageView
                    android:id="@+id/closeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_close" />
                
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="36dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/login_with_phone_image"
                    android:src="@drawable/ic_check_magenta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                
                <TextView
                    android:id="@+id/dialogTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Successfully Logged In!"
                    android:textColor="@color/cardTitleColor"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/logo" />
    
                <TextView
                    android:id="@+id/selectionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Select at least 3 of your interests"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dialogTitleTextView"
                    app:layout_constraintVertical_bias="0.3" />
    
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/interestChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:singleSelection="false"
                    app:singleLine="false"
                    app:chipSpacingHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="@id/dialogTitleTextView"
                    app:layout_constraintStart_toStartOf="@id/dialogTitleTextView"
                    app:layout_constraintTop_toBottomOf="@id/selectionText" />
    
                <Button
                    android:id="@+id/doneButton"
                    style="@style/ButtonStyleSolidPink"
                    android:layout_width="@dimen/button_accent_width"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="36dp"
                    android:text="@string/done_text"
                    android:textAllCaps="true"
                    app:layout_constraintEnd_toEndOf="@id/dialogTitleTextView"
                    app:layout_constraintStart_toStartOf="@id/dialogTitleTextView"
                    app:layout_constraintTop_toBottomOf="@+id/interestChipGroup" />
    
                <TextView
                    android:id="@+id/skipButton"
                    style="@style/ViewAllTextView"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginEnd="0dp"
                    android:paddingHorizontal="16dp"
                    android:text="@string/skip_text"
                    android:textAllCaps="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:drawableEndCompat="@drawable/ic_right_arrow"
                    app:layout_constraintTop_toBottomOf="@id/doneButton"
                    app:layout_constraintStart_toStartOf="@id/dialogTitleTextView"
                    app:layout_constraintEnd_toEndOf="@id/dialogTitleTextView"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>