<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="164dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_logo_with_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/tag_line_txt"
            android:textColor="@color/main_text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/logo"
            app:layout_constraintStart_toStartOf="@+id/logo"
            app:layout_constraintTop_toBottomOf="@+id/logo"/>


        <TextView
            android:id="@+id/forgot_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/action_sign_in"
            android:textColor="@color/main_text_color"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/title_tv"
            app:layout_constraintStart_toStartOf="@+id/title_tv"
            app:layout_constraintTop_toBottomOf="@+id/title_tv" />


        <EditText
            android:id="@+id/phone_number_et"
            style="@style/editTextOval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:letterSpacing="0.1"
            app:layout_constraintEnd_toEndOf="@+id/enter_code_tv"
            app:layout_constraintStart_toStartOf="@+id/enter_code_tv"
            app:layout_constraintTop_toBottomOf="@+id/forgot_password_tv"/>


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:buttonTint="@color/colorAccent"
            android:checked="false"
            app:layout_constraintEnd_toStartOf="@+id/terms_and_conditions_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ref_code_et" />

        <TextView
            android:id="@+id/terms_and_conditions_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/terms_and_conditions_text"
            android:textColor="@color/colorAccent"
            android:textColorLink="@drawable/text_selector2"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintTop_toTopOf="@+id/checkBox" />


        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_have_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="arrow_icon,have_ref_tv" />

        <TextView
            android:id="@+id/have_ref_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/have_referral_code"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:onClick="handleHaveReferralOption"
            app:layout_constraintEnd_toEndOf="@+id/phone_number_et"
            app:layout_constraintStart_toStartOf="@+id/phone_number_et"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_et" />

        <ImageView
            android:id="@+id/arrow_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_right_arrow_white"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/have_ref_tv"
            app:layout_constraintStart_toEndOf="@+id/have_ref_tv"
            app:layout_constraintTop_toTopOf="@+id/have_ref_tv" />


        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="ref_code_et,ref_code_tv" />

        <TextView
            android:id="@+id/ref_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/have_referral_code"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/phone_number_et"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="@+id/phone_number_et"
            app:layout_constraintTop_toBottomOf="@+id/have_ref_tv" />

        <EditText
            android:id="@+id/ref_code_et"
            style="@style/editTextOval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/referral_code"
            android:inputType="number"
            android:letterSpacing="0.1"
            app:layout_constraintEnd_toEndOf="@+id/phone_number_et"
            app:layout_constraintStart_toStartOf="@+id/phone_number_et"
            app:layout_constraintTop_toBottomOf="@+id/ref_code_tv" />



        <Button
            android:id="@+id/login_btn"
            style="@style/toffeeButton"
            android:layout_width="@dimen/button_accent_width"
            android:layout_height="@dimen/button_accent_height"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:enabled="false"
            android:text="@string/next"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="@+id/phone_number_et"
            app:layout_constraintStart_toStartOf="@+id/phone_number_et"
            app:layout_constraintTop_toBottomOf="@+id/checkBox"/>


        <TextView
            android:id="@+id/signin_using_pass_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/signin_using_password_text"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/login_btn"
            app:layout_constraintStart_toStartOf="@+id/login_btn"
            app:layout_constraintTop_toBottomOf="@+id/login_btn"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>