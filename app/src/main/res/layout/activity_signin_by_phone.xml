        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_splash_logo"
            app:layout_constraintBottom_toBottomOf="@id/topView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topView" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/top_round_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo"
                app:layout_constraintVertical_bias="1">

                <TextView
                    android:id="@+id/forgot_password_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/action_sign_in"
                    android:textColor="@color/main_text_color"
                    android:textSize="26sp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintVertical_bias="0.3"
                    app:layout_constraintBottom_toTopOf="@+id/phone_number_et"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/phone_number_et"
                    android:background="@drawable/single_line_input_text_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_line_input_text_height"
                    android:layout_marginHorizontal="56dp"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:letterSpacing="0.1"
                    app:layout_constraintBottom_toTopOf="@+id/have_ref_tv"
                    app:layout_constraintEnd_toEndOf="@+id/forgot_password_tv"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/forgot_password_tv"
                    app:layout_constraintTop_toBottomOf="@+id/forgot_password_tv" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_have_ref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="arrow_icon,have_ref_tv" />

                <TextView
                    android:id="@+id/have_ref_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_medium"
                    android:onClick="handleHaveReferralOption"
                    android:text="@string/have_referral_code"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/phone_number_et"
                    app:layout_constraintStart_toStartOf="@+id/phone_number_et"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_et"
                    app:layout_constraintBottom_toTopOf="@id/ref_code_et" />

                <ImageView
                    android:id="@+id/arrow_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_right_arrow_white"
                    app:layout_constraintBottom_toBottomOf="@+id/have_ref_tv"
                    app:layout_constraintStart_toEndOf="@+id/have_ref_tv"
                    app:layout_constraintTop_toTopOf="@+id/have_ref_tv"
                    app:tint="@color/colorAccent" />

                <!--<androidx.constraintlayout.widget.Group
                    android:id="@+id/group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="ref_code_et,ref_code_tv"
                    app:layout_constraintBottom_toTopOf="@+id/phone_number_et"
                    app:layout_constraintTop_toBottomOf="@+id/group_have_ref" />-->

                <!--<TextView
                    android:id="@+id/ref_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/have_referral_code"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/phone_number_et"
                    app:layout_constraintHorizontal_bias="0.465"
                    app:layout_constraintStart_toStartOf="@+id/phone_number_et"
                    app:layout_constraintTop_toBottomOf="@+id/have_ref_tv"
                    app:layout_constraintBottom_toTopOf="@id/ref_code_et"/>-->

                <EditText
                    android:id="@+id/ref_code_et"
                    android:background="@drawable/single_line_input_text_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="56dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/referral_code"
                    android:letterSpacing="0.1"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/phone_number_et"
                    app:layout_constraintStart_toStartOf="@+id/phone_number_et"
                    app:layout_constraintTop_toBottomOf="@+id/have_ref_tv"
                    app:layout_constraintBottom_toTopOf="@id/terms_and_conditions_checkbox"/>

                <android.widget.CheckBox
                    android:id="@+id/terms_and_conditions_checkbox"
                    android:button="@drawable/custom_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:checked="false"
                    android:text=" I agree to the"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintBottom_toTopOf="@+id/login_btn"
                    app:layout_constraintEnd_toStartOf="@+id/terms_and_conditions_tv"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ref_code_et" />

                <TextView
                    android:id="@+id/terms_and_conditions_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textColorLink="@drawable/text_selector2"
                    app:layout_constraintBottom_toBottomOf="@+id/terms_and_conditions_checkbox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/terms_and_conditions_checkbox"
                    app:layout_constraintTop_toTopOf="@+id/terms_and_conditions_checkbox" />

                <Button
                    android:id="@+id/login_btn"
                    style="@style/ButtonStyleSolidPink"
                    android:layout_width="@dimen/button_accent_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:enabled="false"
                    android:text="@string/next"
                    android:textAllCaps="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/phone_number_et"
                    app:layout_constraintStart_toStartOf="@+id/phone_number_et"
                    app:layout_constraintTop_toBottomOf="@+id/terms_and_conditions_checkbox" />

                <!--<TextView
                android:id="@+id/signin_using_pass_tv"
                android:layout_width="wrap_content"
