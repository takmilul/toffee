<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="data"
            type="com.banglalink.toffee.model.ChannelInfo" />
        
        <variable
            name="callback"
            type="com.banglalink.toffee.common.paging.ProviderIconCallback" />
    </data>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/payment_option_card_bg"
        android:onClick="@{() -> callback.onItemClicked(data)}"
        app:cardCornerRadius="12dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/passNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Premium Pass"
                android:textColor="@color/cardTitleColor"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintEnd_toStartOf="@+id/passBrandImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/passPriceTextView"
                app:layout_constraintVertical_chainStyle="packed"/>
            
            <TextView
                android:id="@+id/passPriceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="Starting from BDT 20"
                android:textColor="@color/cardTitleColor"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintEnd_toEndOf="@+id/passNameTextView"
                app:layout_constraintStart_toStartOf="@id/passNameTextView"
                app:layout_constraintTop_toBottomOf="@+id/passNameTextView"
                app:layout_constraintBottom_toTopOf="@id/passEligibleUserTextView"/>
            
            <TextView
                android:id="@+id/passEligibleUserTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                tools:text="For all users"
                android:textColor="@color/cardTitleColor"
                android:textSize="12sp"
                android:textStyle="italic"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/passNameTextView"
                app:layout_constraintStart_toStartOf="@id/passNameTextView"
                app:layout_constraintTop_toBottomOf="@+id/passPriceTextView" />
            
            <ImageView
                android:id="@+id/passBrandImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/bkash"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/passNameTextView"
                android:contentDescription="pass brand image view" />
        
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>


