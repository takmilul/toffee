<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.banglalink.toffee.model.ChallengeReward" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/screen_bg_white">
        
        <ImageView
            android:contentDescription="@string/txt_prize"
            android:id="@+id/prizeImageView"
            android:layout_width="136dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="4dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="W, 4:4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/placeholder" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{data.winnerPosition}"
            tools:text="1st Prize"
            android:maxLines="1"
            android:textColor="@color/second_text_color"
            app:layout_constraintEnd_toEndOf="@id/prizeImageView"
            app:layout_constraintStart_toStartOf="@id/prizeImageView"
            app:layout_constraintTop_toBottomOf="@+id/prizeImageView" />

        <TextView
            android:id="@+id/textView54"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{data.prize}"
            tools:text="iPhone X"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:textSize="@dimen/default_text_size"
            app:layout_constraintEnd_toEndOf="@id/prizeImageView"
            app:layout_constraintStart_toStartOf="@id/prizeImageView"
            app:layout_constraintTop_toBottomOf="@id/textView53"
            app:layout_constraintBottom_toTopOf="@id/winnerView"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/winnerView"
            android:visibility="@{data.winnerName.isEmpty() ? View.GONE : View.VISIBLE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView54"
            app:constraint_referenced_ids="logoImageView,winnerNameTextView"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logoImageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="@id/prizeImageView"
            app:layout_constraintTop_toBottomOf="@id/textView54"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_profile_default" />
        
        <TextView
            android:id="@+id/winnerNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{data.winnerName}"
            tools:text="Abir87"
            android:maxLines="1"
            android:layout_marginStart="4dp"
            android:textColor="@color/second_text_color"
            app:layout_constraintStart_toEndOf="@id/logoImageView"
            app:layout_constraintEnd_toEndOf="@id/prizeImageView"
            app:layout_constraintTop_toTopOf="@id/logoImageView"
            app:layout_constraintBottom_toBottomOf="@id/logoImageView" />
            
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>