<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="data"
            type="com.banglalink.toffee.model.UgcUserChannelInfo" />

        <variable
            name="callback"
            type="com.banglalink.toffee.ui.landing.LandingPopularChannelCallback" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/iconHolder"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{() -> callback.onItemClicked(data)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon"
                loadChannelLogo="@{data}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_profile_default" />
        </FrameLayout>
        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@{data.contentProviderName}"
            android:textColor="#7990AC"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/iconHolder"
            app:layout_constraintStart_toStartOf="@+id/iconHolder"
            app:layout_constraintTop_toBottomOf="@+id/iconHolder"
            tools:text="Abir87" />

        <com.banglalink.toffee.ui.widget.MultiTextButton
            android:id="@+id/multiTextButton"
            bindSubscriptionStatus="@{data}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="4dp"
            android:onClick="@{(v) -> callback.onSubscribeButtonClicked(v, data)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{data.formatedSubscriberCount}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/multiTextButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
