<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="data"
            type="com.banglalink.toffee.model.ChannelInfo" />
        
        <variable
            name="callback"
            type="com.banglalink.toffee.ui.common.ContentReactionCallback" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_round_white_bg">
        
        <com.banglalink.toffee.ui.widget.CustomImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/txt_placeholder"
            app:onSafeClick="@{()->callback.onItemClicked(data)}"
            loadChannelImage="@{data}"
            app:layout_constraintDimensionRatio="W,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/name"
            tools:src="@drawable/placeholder" />
        
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#88000000"
            android:paddingVertical="@dimen/duration_vertical_padding"
            android:paddingHorizontal="@dimen/duration_horizontal_padding"
            android:text="@{data.formattedDuration}"
            android:textSize="@dimen/duration_text_size"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/progress"
            app:layout_constraintEnd_toEndOf="@+id/poster"
            tools:text="00:00" />
        
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:max="1000"
            bindViewProgress="@{data}"
            android:progressBackgroundTint="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/poster"
            app:layout_constraintEnd_toEndOf="@+id/duration"
            app:layout_constraintStart_toStartOf="parent" />
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ownerPicture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/txt_profile_image"
            android:layout_marginStart="16dp"
            app:onSafeClick="@{()-> callback.onProviderIconClicked(data)}"
            tools:src="@drawable/ic_menu_profile"
            loadImageFromUrlRounded="@{data.channelProfileUrl}"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster"/>
        
        <TextView
            android:id="@+id/name"
            style="@style/programNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="@{data.program_name}"
            app:onSafeClick="@{()->callback.onItemClicked(data)}"
            app:layout_constraintEnd_toStartOf="@+id/options"
            app:layout_constraintStart_toEndOf="@+id/ownerPicture"
            app:layout_constraintTop_toBottomOf="@id/poster"
            tools:text="This Makeup Tutorial By Kylie Jenner Is All You Need For Summer" />
        
        <ImageView
            android:id="@+id/options"
            style="@style/OptionMenuStyle"
            android:paddingVertical="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="14dp"
            android:contentDescription="@string/txt_options"
            app:onSafeClick="@{(v)->callback.onOpenMenu(v, data)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:srcCompat="@drawable/ic_menu_more" />
        
        <TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:layout_marginTop="9dp"
            android:text="@{data.content_provider_name + ` \u2022 `}"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/fixed_second_text_color"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintEnd_toStartOf="@id/uploadDuration"
            tools:text="Banglalink &#8226; " />
        
        <TextView
            android:id="@+id/uploadDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{data.formattedCreateTime}"
            android:maxLines="1"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/fixed_second_text_color"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/owner"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@id/owner"
            app:layout_constraintBottom_toBottomOf="@id/owner"
            tools:text="14h" />
        
        <ImageView
            android:id="@+id/thirdIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/ic_reaction_wow_no_shadow"
            bind:emoIcon="@{data}"
            bind:iconPosition="@{3}"
            android:contentDescription="@string/tv_wow"
            app:layout_constraintTop_toTopOf="@id/reactionCount"
            app:layout_constraintBottom_toBottomOf="@id/reactionCount"
            app:layout_constraintStart_toStartOf="@id/secondIcon"/>

        <ImageView
            android:id="@+id/secondIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginStart="13dp"
            app:srcCompat="@drawable/ic_reaction_love_no_shadow"
            bind:emoIcon="@{data}"
            bind:iconPosition="@{2}"
            android:contentDescription="@string/txt_love"
            app:layout_constraintTop_toTopOf="@id/reactionCount"
            app:layout_constraintBottom_toBottomOf="@id/reactionCount"
            app:layout_constraintStart_toStartOf="@id/firstIcon"/>

        <ImageView
            android:id="@+id/firstIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_reaction_like_no_shadow"
            bind:emoIcon="@{data}"
            bind:iconPosition="@{1}"
            android:contentDescription="@string/txt_like"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@id/reactionCount"
            app:layout_constraintBottom_toBottomOf="@id/reactionCount"/>

        <TextView
            android:id="@+id/reactionCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="2dp"
            android:gravity="center_vertical"
            bindEmoCount="@{data}"
            android:maxLines="1"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/fixed_second_text_color"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintStart_toEndOf="@id/thirdIcon"
            app:layout_constraintBottom_toBottomOf="@+id/owner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/owner"
            tools:text="904.5k" />
        
        <TextView
            android:id="@+id/viewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingVertical="4dp"
            android:text="@{data.formattedViewCount + ` Views`}"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/fixed_second_text_color"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/owner"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            tools:text="10K" />
        
        <TextView
            android:id="@+id/shareCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingVertical="4dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@{data.formattedShareCount}"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/fixed_second_text_color"
            android:fontFamily="@font/roboto_medium"
            app:onSafeClick="@{(v) -> callback.onShareClicked(v, data)}"
            app:drawableStartCompat="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="@id/viewCount"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/viewCount"
            app:layout_constraintTop_toTopOf="@+id/viewCount"
            tools:text="21K" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <TextView
            android:id="@+id/reactionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="16dp"
            android:paddingVertical="4dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="React"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/fixed_second_text_color"
            android:fontFamily="@font/roboto_medium"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_reaction_love_empty"
            loadReactionEmo="@{data.myReaction}"
            app:onSafeClick="@{(v) -> callback.onReactionClicked(v, reactionCount, data)}"
            app:layout_constraintBottom_toBottomOf="@+id/viewCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/viewCount"
            tools:text="React" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>