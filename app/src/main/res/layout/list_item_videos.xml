<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <import type="android.view.View" />
        <import type="com.banglalink.toffee.util.Utils"/>
        
        <variable
            name="isMyChannel"
            type="Boolean" />
        
        <variable
            name="data"
            type="com.banglalink.toffee.model.ChannelInfo" />
        
        <variable
            name="callback"
            type="com.banglalink.toffee.ui.common.ContentReactionCallback" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_round_white_bg"
        android:onClick="@{()->callback.onItemClicked(data)}">
        
        <com.banglalink.toffee.ui.widget.CustomImageView
            android:id="@+id/poster"
            loadChannelImage="@{data}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:minHeight="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="W,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/placeholder" />
        
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#88000000"
            android:paddingVertical="@dimen/duration_vertical_padding"
            android:paddingHorizontal="@dimen/duration_horizontal_padding"
            android:text="@{data.formattedDuration}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/duration_text_size"
            app:layout_constraintBottom_toTopOf="@+id/progress"
            app:layout_constraintEnd_toEndOf="@+id/poster"
            tools:text="00:00" />
        
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:max="100"
            android:progress="50"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/poster"
            app:layout_constraintEnd_toEndOf="@+id/duration"
            app:layout_constraintStart_toStartOf="parent" />
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ownerPicture"
            loadImageFromUrlRounded="@{data.channelProfileUrl}"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:visibility="@{isMyChannel ? View.GONE : View.VISIBLE}"
            android:onClick="@{()-> callback.onProviderIconClicked(data)}"
            android:src="@drawable/ic_profile_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster" />
        
        <TextView
            android:id="@+id/name"
            style="@style/programNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            contentNameMargin="@{isMyChannel}"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{data.program_name}"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/main_text_color"
            app:layout_constraintEnd_toStartOf="@+id/options"
            app:layout_constraintStart_toEndOf="@+id/ownerPicture"
            app:layout_constraintTop_toBottomOf="@id/poster"
            tools:text="This Makeup Tutorial By Kylie Jenner Is All you Need For Summer" />
        
        <ImageView
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:onClick="@{(v)->callback.onOpenMenu(v, data)}"
            android:padding="4dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/poster"
            app:srcCompat="@drawable/ic_menu_more" />
        
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />
        
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/titleBarrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="name,options"/>
        
        <TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{isMyChannel ? `` : data.content_provider_name}"
            android:textColor="@color/fixed_second_text_color"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/titleBarrier"
            app:layout_constraintEnd_toStartOf="@id/uploadDuration"
            tools:text="Banglalink" />
        
        <TextView
            android:id="@+id/uploadDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="8dp"
            android:text="@{` \u2022 ` + data.formattedCreateTime}"
            android:textColor="@color/fixed_second_text_color"
            app:layout_constraintStart_toEndOf="@id/owner"
            app:layout_constraintEnd_toStartOf="@id/reactionCount"
            app:layout_constraintTop_toTopOf="@id/owner"
            app:layout_constraintBottom_toBottomOf="@id/owner"
            tools:text=" &#8226; 14h" />
        
        <TextView
            android:id="@+id/reactionCount"
            bindEmoCount="@{data}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:drawablePadding="4dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="@color/fixed_second_text_color"
            app:drawableStartCompat="@drawable/ic_reactions_emo"
            app:layout_constraintBottom_toBottomOf="@+id/owner"
            app:layout_constraintEnd_toEndOf="@id/options"
            app:layout_constraintTop_toTopOf="@+id/owner"
            tools:text="904.5k" />
        
        <TextView
            android:id="@+id/viewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:text="@{data.formatted_view_count + ` views`}"
            android:textColor="@color/fixed_second_text_color"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/shareCount"
            app:layout_constraintStart_toStartOf="@+id/owner"
            app:layout_constraintTop_toBottomOf="@+id/owner"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            tools:text="10K" />
        
        <TextView
            android:id="@+id/shareCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="@{data.formatedShareCount}"
            android:textColor="@color/fixed_second_text_color"
            android:onClick="@{(v) -> callback.onShareClicked(v, data)}"
            app:drawableStartCompat="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="@id/viewCount"
            app:layout_constraintEnd_toStartOf="@+id/reactionButton"
            app:layout_constraintStart_toEndOf="@+id/viewCount"
            app:layout_constraintTop_toTopOf="@+id/viewCount"
            tools:text="21K" />
        
        <TextView
            android:id="@+id/reactionButton"
            loadReactionEmo="@{data.myReaction}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="React"
            android:onClick="@{(v) -> callback.onReactionClicked(v, reactionCount, data)}"
            android:longClickable="true"
            android:textColor="@color/fixed_second_text_color"
            app:drawableStartCompat="@drawable/ic_reaction_love_empty"
            app:layout_constraintBottom_toBottomOf="@+id/viewCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shareCount"
            app:layout_constraintTop_toTopOf="@+id/viewCount"
            tools:text="React" />
        
        <androidx.constraintlayout.widget.Group
            android:id="@+id/reactionGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{data.isApproved == null || data.isApproved == 1 ? View.VISIBLE : View.GONE}"
            app:constraint_referenced_ids="viewCount,shareCount,reactionButton" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="24dp"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="Approval Pending"
            android:textColor="@color/approvalPendingColor"
            android:textSize="16sp"
            android:visibility="@{reactionGroup.visibility == View.GONE ? View.VISIBLE : View.GONE}"
            app:drawableStartCompat="@drawable/ic_time"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/owner"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>