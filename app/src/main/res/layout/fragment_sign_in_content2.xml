<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signInContentMotionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="61dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sign_in_top_text"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/user_name_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/single_line_input_text_height"
            android:layout_marginHorizontal="56dp"
            android:background="@drawable/single_line_input_text_bg"
            android:ems="10"
            android:drawableStart="@drawable/ic_user"
            android:layout_marginTop="58dp"
            android:gravity="center"
            android:hint="Your Name"
            android:fontFamily="@font/roboto_italic"
            android:inputType="phone"
            android:letterSpacing="0.1"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/phone_number_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/single_line_input_text_height"
            android:layout_marginHorizontal="56dp"
            android:background="@drawable/single_line_input_text_bg"
            android:ems="10"
            android:drawableStart="@drawable/ic_phone"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:hint="Your Phone Number"
            android:fontFamily="@font/roboto_italic"
            android:inputType="phone"
            android:letterSpacing="0.1"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name_et"
             />


        <LinearLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:background="@drawable/login_page_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_et"
            />


        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/roboto_bold"
            android:text="NEXT"
            android:textColor="@color/main_text_color"
            android:textSize="12sp"
            android:drawableEnd="@drawable/ic_arrow_forward"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indicator" />







    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
