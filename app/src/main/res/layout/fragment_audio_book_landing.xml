<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/audioBookFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.audiobook.AudioBookLandingFragment"
        android:orientation="vertical"
        android:paddingBottom="12dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/bannerFragment"
            android:name="com.banglalink.toffee.ui.audiobook.carousel.CarouselContentFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/audioBooksFragment"
            android:name="com.banglalink.toffee.ui.audiobook.category.AudioBookCategoryFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>