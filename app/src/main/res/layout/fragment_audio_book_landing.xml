<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.audiobook.AudioBookLandingFragment"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        >
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/carouselFragment"
            android:name="com.banglalink.toffee.ui.audiobook.carousel.CarouselContentFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/trendingFragment"
            android:name="com.banglalink.toffee.ui.audiobook.category.AudioBookTrendingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/d"
            android:name="com.banglalink.toffee.ui.audiobook.category.AudioBookTrendingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/c"
            android:name="com.banglalink.toffee.ui.audiobook.category.AudioBookTrendingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/b"
            android:name="com.banglalink.toffee.ui.audiobook.category.AudioBookTrendingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/a"
            android:name="com.banglalink.toffee.ui.audiobook.category.AudioBookTrendingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>