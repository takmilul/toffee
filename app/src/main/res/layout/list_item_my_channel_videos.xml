<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    
    <data>
        <import type="android.view.View" />
        
        <variable
            name="isMyChannel"
            type="Boolean" />
        
        <variable
            name="data"
            type="com.banglalink.toffee.model.ChannelInfo" />
        
        <variable
            name="callback"
            type="com.banglalink.toffee.ui.common.ContentReactionCallback" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_round_white_bg">
        
        <com.banglalink.toffee.ui.widget.CustomImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            loadChannelImage="@{data}"
            app:onSafeClick="@{()->callback.onItemClicked(data)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/name"
            tools:src="@drawable/placeholder" />
        
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:text=""
            tools:text="New"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_text_size"
            android:background="@drawable/new_tag_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#88000000"
            android:paddingVertical="@dimen/duration_vertical_padding"
            android:paddingHorizontal="@dimen/duration_horizontal_padding"
            android:text="@{data.formattedDuration}"
            android:textSize="@dimen/duration_text_size"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/progress"
            app:layout_constraintEnd_toEndOf="@+id/poster"
            tools:text="00:00" />
        
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:max="1000"
            bindViewProgress="@{data}"
            android:progressBackgroundTint="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/poster"
            app:layout_constraintEnd_toEndOf="@+id/duration"
            app:layout_constraintStart_toStartOf="parent" />
        
        <!--<de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ownerPicture"
            loadImageFromUrlRounded="@{data.channelProfileUrl}"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="@{isMyChannel ? View.GONE : View.VISIBLE}"
            android:onClick="@{()-> callback.onProviderIconClicked(data)}"
            android:src="@drawable/ic_profile_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster"/>-->
        
        <TextView
            android:id="@+id/name"
            style="@style/programNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constrainedWidth="true"
            android:text="@{data.program_name}"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            app:onSafeClick="@{()->callback.onItemClicked(data)}"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@+id/options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster"
            tools:text="This Makeup Tutorial By Kylie Jenner Is All You Need For Summer" />
        
        <ImageView
            android:id="@+id/options"
            style="@style/OptionMenuStyle"
            android:paddingVertical="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="14dp"
            app:onSafeClick="@{(v)->callback.onOpenMenu(v, data)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:srcCompat="@drawable/ic_menu_more" />
        
        <!--<androidx.constraintlayout.widget.Barrier
            android:id="@+id/titleBarrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="name,options"/>-->
        
        <!--<TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:maxLines="1"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:textSize="@dimen/default_text_size"
            android:text="@{isMyChannel ? `` : data.content_provider_name}"
            android:textColor="@color/fixed_second_text_color"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:text="Banglalink" />-->
        
        <TextView
            android:id="@+id/uploadDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="8dp"
            android:text="@{data.formattedCreateTime}"
            android:maxLines="1"
            android:textSize="@dimen/default_text_size"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/fixed_second_text_color"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:text=" &#8226; 14h" />
        
        <ImageView
            android:id="@+id/thirdIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/ic_reaction_wow_no_shadow"
            bind:emoIcon="@{data}"
            bind:iconPosition="@{3}"
            app:layout_constraintTop_toTopOf="@id/reactionCount"
            app:layout_constraintBottom_toBottomOf="@id/reactionCount"
            app:layout_constraintStart_toStartOf="@id/secondIcon"/>

        <ImageView
            android:id="@+id/secondIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/ic_reaction_love_no_shadow"
            bind:emoIcon="@{data}"
            bind:iconPosition="@{2}"
            app:layout_constraintTop_toTopOf="@id/reactionCount"
            app:layout_constraintBottom_toBottomOf="@id/reactionCount"
            app:layout_constraintStart_toStartOf="@id/firstIcon"/>

        <ImageView
            android:id="@+id/firstIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_reaction_like_no_shadow"
            bind:emoIcon="@{data}"
            bind:iconPosition="@{1}"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@id/reactionCount"
            app:layout_constraintBottom_toBottomOf="@id/reactionCount"/>

        <TextView
            android:id="@+id/reactionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="2dp"
            bindEmoCount="@{data}"
            android:maxLines="1"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/fixed_second_text_color"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/thirdIcon"
            app:layout_constraintBottom_toBottomOf="@+id/uploadDuration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/uploadDuration"
            tools:text="904.5k" />
        
        <TextView
            android:id="@+id/viewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingVertical="4dp"
            android:text="@{data.formattedViewCount + ` Views`}"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/fixed_second_text_color"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/uploadDuration"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            tools:text="10K" />
        
        <TextView
            android:id="@+id/shareCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingVertical="4dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@{data.formattedShareCount}"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/fixed_second_text_color"
            android:fontFamily="@font/roboto_medium"
            app:onSafeClick="@{(v) -> callback.onShareClicked(v, data)}"
            app:drawableStartCompat="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="@id/viewCount"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/viewCount"
            app:layout_constraintTop_toTopOf="@+id/viewCount"
            tools:text="21K" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <TextView
            android:id="@+id/reactionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="16dp"
            android:drawablePadding="4dp"
            android:paddingVertical="4dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="React"
            android:textSize="@dimen/default_text_size"
            android:fontFamily="@font/roboto_medium"
            app:onSafeClick="@{(v) -> callback.onReactionClicked(v, reactionCount, data)}"
            android:textColor="@color/fixed_second_text_color"
            app:drawableStartCompat="@drawable/ic_reaction_love_empty"
            loadReactionEmo="@{data.myReaction}"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="@+id/viewCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/viewCount"
            tools:text="React" />
        
        <androidx.constraintlayout.widget.Group
            android:id="@+id/reactionGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{data.isApproved == 1 ? View.VISIBLE : View.GONE}"
            app:constraint_referenced_ids="uploadDuration,firstIcon,secondIcon,thirdIcon,reactionCount,viewCount,shareCount,reactionButton" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="Approval Pending"
            android:textSize="12sp"
            android:textColor="@color/main_text_color"
            android:background="@drawable/status_text_bg_round"
            android:visibility="@{reactionGroup.visibility == View.GONE ? View.VISIBLE : View.GONE}"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>