<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="200dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/pack_corner_radious"
    android:elevation="5dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/package_badge_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_daily_package" />

        <TextView
            android:id="@+id/package_name_tv"
            style="@style/subscription_pack_header_style"
            android:layout_width="0dp"
            android:layout_marginEnd="8dp"
            android:text="@string/daily_pack"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/package_badge_icon" />

        <TextView
            android:id="@+id/channel_list_tv"
            style="@style/subscripton_pack_channel_text"
            android:layout_marginTop="8dp"
            android:text="Channels"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/package_name_tv" />

        <TextView
            android:id="@+id/subscribe"
            style="@style/SubscribePackButtonStyle"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:enabled="false"
            android:text="@string/subscribed_pack"
            android:textAllCaps="true"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="@+id/package_badge_icon"
            app:layout_constraintStart_toStartOf="@+id/package_badge_icon"
            app:layout_constraintTop_toBottomOf="@+id/package_badge_icon" />

        b<TextView
            android:id="@+id/auto_renew_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_medium"
            tools:text="Auto renew in 16 hours"
            android:textColor="@color/main_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/subscribe"
            app:layout_constraintEnd_toStartOf="@id/subscribe"
            app:layout_constraintTop_toTopOf="@id/subscribe" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/guide_line_width_percent"
            app:layout_constraintGuide_begin="239dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/check_dimen"
            android:layout_height="@dimen/check_dimen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_check" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/channel_list_tv"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/channel_list_tv"
            app:srcCompat="@drawable/ic_right_arrow_accent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
