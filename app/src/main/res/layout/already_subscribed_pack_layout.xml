<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.banglalink.toffee.model.Package" />
        <variable
            name="callback"
            type="com.banglalink.toffee.ui.subscription.PackageCallBack" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/pack_corner_radius"
        app:cardBackgroundColor="@color/cardBgColor" >

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="1dp">

            <ImageView
                android:id="@+id/package_badge_icon"
                loadImageFromUrlRounded="@{data.mobileLogo}"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_daily_package"
                android:contentDescription="@string/txt_daily_package" />

            <TextView
                android:id="@+id/package_name_tv"
                style="@style/subscription_pack_header_style"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:text="@{data.packageName}"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/package_badge_icon"
                tools:text="@string/daily_pack" />

            <TextView
                android:id="@+id/channel_list_tv"
                style="@style/subscripton_pack_channel_text"
                android:layout_marginTop="8dp"
                android:text="Channels"
                android:onClick="@{()->callback.onShowChannelClick(data)}"
                app:layout_constraintEnd_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/package_name_tv" />

            <TextView
                android:id="@+id/subscribe"
                style="@style/SubscribePackButtonStyle"
                android:layout_marginTop="8dp"
                android:background="@drawable/ash_rect"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:text="@string/subscribed_pack"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/package_badge_icon"
                app:layout_constraintStart_toStartOf="@+id/package_badge_icon"
                app:layout_constraintTop_toBottomOf="@+id/package_badge_icon" />

            <TextView
                android:id="@+id/auto_renew_text"
                autoRenewText="@{data}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/main_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/channel_list_tv"
                tools:text="Auto renew in 16 hours" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="239dp"
                app:layout_constraintGuide_percent="@dimen/guide_line_width_percent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/check_dimen"
                android:layout_height="@dimen/check_dimen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check"
                android:contentDescription="@string/txt_check" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                app:tint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@+id/channel_list_tv"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/channel_list_tv"
                app:srcCompat="@drawable/ic_right_arrow_accent"
                android:contentDescription="@string/txt_channel" />

            <Switch
                android:id="@+id/auto_renew_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:checked="@{data.autoRenewable == 1?true:false}"
                android:onClick="@{()->callback.onAutoRenewUpdate(data)}"
                app:layout_constraintBottom_toBottomOf="@+id/subscribe"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/subscribe"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Auto Renew"
                android:textColor="@color/main_text_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/auto_renew_switch"
                app:layout_constraintEnd_toStartOf="@+id/auto_renew_switch"
                app:layout_constraintTop_toTopOf="@+id/auto_renew_switch" />

            <TextView
                android:id="@+id/expire_renew_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"
                validityText="@{data}"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:text="Expires on 21 April 11:59 PM" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

