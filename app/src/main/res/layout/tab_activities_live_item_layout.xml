<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
>
    <data>
        <variable
            name="data"
            type="com.banglalink.toffee.model.ChannelInfo" />
        <variable
            name="position"
            type="java.lang.Integer" />
        <variable
            name="callback"
            type="com.banglalink.toffee.ui.common.SingleListItemCallback&lt;com.banglalink.toffee.model.ChannelInfo&gt;" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="0dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginBottom="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/video_thumb"
                android:layout_width="@dimen/catchup_width"
                android:layout_height="@dimen/catchup_height"
                android:background="@drawable/round_white_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/channel"
                    loadChannelImage="@{data}"
                    android:layout_width="@dimen/channel_width"
                    android:layout_height="@dimen/channel_height"
                    android:layout_gravity="center"
                    android:background="@drawable/circular_white_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@mipmap/ic_menu_channel" />


            </FrameLayout>

<!--            <com.banglalink.toffee.ui.widget.CustomImageView-->
<!--                android:id="@+id/video_thumb"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="234dp"-->
<!--                android:scaleType="fitXY"-->
<!--                loadChannelImage="@{data}"-->
<!--                app:layout_constraintEnd_toStartOf="@+id/guideline6"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                tools:src="@drawable/dummy" />-->

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/reactStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/videoMenuIcon"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Reacted" />

            <TextView
                android:id="@+id/videoTitle"
                style="@style/TitleTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{data.program_name}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toBottomOf="@+id/reactStatus"
                tools:text="Somebody that I used to know (feat Kimbra.) Video uploaded by somebody." />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ownerThumb"
                loadImageFromUrlRounded="@{data.channelProfileUrl}"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_profile_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/video_thumb" />

            <ImageView
                android:id="@+id/reactIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#FFFFFF"
                app:layout_constraintEnd_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="@+id/video_thumb"
                app:srcCompat="@drawable/lb_ic_thumb_up" />

            <TextView
                android:id="@+id/channelName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@{data.content_provider_name}"
                app:layout_constraintBottom_toBottomOf="@+id/ownerThumb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ownerThumb"
                app:layout_constraintTop_toTopOf="@+id/ownerThumb"
                tools:text="BBC One HD" />

            <ImageView
                android:id="@+id/videoMenuIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="@{(v)->callback.onOpenMenu(v, data)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_menu_more" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>