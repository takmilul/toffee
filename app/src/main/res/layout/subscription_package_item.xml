<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_white_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/package_badge_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pro_badge"/>

    <TextView
        android:id="@+id/package_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/main_text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/package_badge_icon"
        app:layout_constraintStart_toStartOf="@+id/package_badge_icon"
        app:layout_constraintTop_toBottomOf="@+id/package_badge_icon"
        tools:text="Toffee PRO"/>

    <TextView
        android:id="@+id/channel_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="59 Channels"
        android:textColor="@drawable/text_selector2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/package_name_tv"
        app:layout_constraintStart_toStartOf="@+id/package_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/package_name_tv"/>

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/channel_list_tv"
        app:layout_constraintStart_toEndOf="@+id/channel_list_tv"
        app:layout_constraintTop_toTopOf="@+id/channel_list_tv"
        app:srcCompat="@drawable/ic_right_arrow_accent"/>

    <TextView
        android:id="@+id/auto_renew_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/accent_fill_rect"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="3 TK/Day"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/per_month_charge_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/channel_list_tv"/>

    <TextView
        android:id="@+id/per_month_charge_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/accent2_fill_rect"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="90 TK/month"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/auto_renew_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/channel_list_tv"/>


</androidx.constraintlayout.widget.ConstraintLayout>