<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="com.banglalink.toffee.ui.premium.PremiumViewModel" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">
        
        <TextView
            android:id="@+id/pack_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:fontFamily="@font/roboto_regular"
            android:text="Choose Payment Method"
            android:textColor="@color/cardTitleColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <androidx.cardview.widget.CardView
            android:id="@+id/trailCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/payment_option_card_bg"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toTopOf="@+id/blPackCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pack_title">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:id="@+id/trailTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="2"
                    android:textColor="@color/cardTitleColor"
                    
                    app:layout_constraintBottom_toTopOf="@id/trailPrice"
                    app:layout_constraintEnd_toStartOf="@+id/passBrandImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />
                
                <TextView
                    android:id="@+id/trailPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Starting from BDT 0"
                    android:textColor="@color/cardTitleColor"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/trailTitle"
                    app:layout_constraintStart_toStartOf="@id/trailTitle"
                    app:layout_constraintTop_toBottomOf="@+id/trailTitle" />
                
                <TextView
                    android:id="@+id/trailDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/blClr"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/trailPrice"
                    app:layout_constraintStart_toStartOf="@+id/trailPrice"
                    app:layout_constraintTop_toBottomOf="@+id/trailPrice" />
                
                <ImageView
                    android:id="@+id/passBrandImageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="pass brand image view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/trailTitle" />
            
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        
        <androidx.cardview.widget.CardView
            android:id="@+id/blPackCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/payment_option_card_bg"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toTopOf="@+id/bkashPackCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trailCard">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/blPackLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:id="@+id/blPackTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="2"
                    android:text="Pay by Banglalink"
                    android:textColor="@color/cardTitleColor"
                    app:layout_constraintBottom_toTopOf="@id/blPackPrice"
                    app:layout_constraintEnd_toStartOf="@+id/blImg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />
                
                <TextView
                    android:id="@+id/blPackPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/cardTitleColor"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/blPackTitle"
                    app:layout_constraintStart_toStartOf="@id/blPackTitle"
                    
                    app:layout_constraintTop_toBottomOf="@+id/blPackTitle" />
                
                <TextView
                    android:id="@+id/blPackDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Only for Banglalink Subscribers"
                    android:textColor="@color/cardTitleColor"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/blPackPrice"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/blPackPrice"
                    app:layout_constraintTop_toBottomOf="@+id/blPackPrice"
                    app:layout_constraintVertical_bias="0.4" />
                
                <ImageView
                    android:id="@+id/blImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="pass brand image view"
                    android:src="@drawable/bl_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/blPackTitle" />
            
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        
        <androidx.cardview.widget.CardView
            android:id="@+id/bkashPackCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/payment_option_card_bg"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blPackCard">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:id="@+id/bkashPackTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="2"
                    android:text="Pay by Bkash"
                    android:textColor="@color/cardTitleColor"
                    app:layout_constraintBottom_toTopOf="@id/bkashPackPrice"
                    app:layout_constraintEnd_toStartOf="@+id/bkashImg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />
                
                <TextView
                    android:id="@+id/bkashPackPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/cardTitleColor"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/bkashPackTitle"
                    app:layout_constraintHorizontal_bias="0.0"
                    
                    app:layout_constraintStart_toStartOf="@id/bkashPackTitle"
                    app:layout_constraintTop_toBottomOf="@+id/bkashPackTitle" />
                
                <TextView
                    android:id="@+id/bkashPackDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="For all users"
                    android:textColor="@color/cardTitleColor"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/bkashPackTitle"
                    app:layout_constraintStart_toStartOf="@id/bkashPackTitle"
                    app:layout_constraintTop_toBottomOf="@+id/bkashPackPrice" />
                
                <ImageView
                    android:id="@+id/bkashImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="pass brand image view"
                    android:src="@drawable/bkash"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/bkashPackTitle" />
            
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
