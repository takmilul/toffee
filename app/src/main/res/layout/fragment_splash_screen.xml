<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splashScreenMotionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_bg"
    app:layoutDescription="@xml/splash_screen_motion_scene">
    
    <ImageView
        android:id="@+id/splashLineImageView"
        android:layout_width="448dp"
        android:layout_height="400dp"
        android:alpha="0.2"
        android:background="@drawable/ic_splash_logo_line_bg"
        android:contentDescription="@string/txt_splash_line"
        android:scaleX="0.3"
        android:scaleY="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
    
    <ImageView
        android:id="@+id/splashPinkImageView"
        android:layout_width="436dp"
        android:layout_height="420dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:alpha="0.2"
        android:background="@drawable/ic_splash_logo_pink_bg"
        android:contentDescription="@string/txt_splash_pink"
        android:rotation="90"
        android:scaleX="0.3"
        android:scaleY="0.3"
        app:layout_constraintBottom_toBottomOf="@id/splashLineImageView"
        app:layout_constraintEnd_toEndOf="@id/splashLineImageView"
        app:layout_constraintStart_toStartOf="@id/splashLineImageView"
        app:layout_constraintTop_toTopOf="@id/splashLineImageView" />
    
    <ImageView
        android:id="@+id/splashWhiteImageView"
        android:layout_width="350dp"
        android:layout_height="372dp"
        android:alpha="0.2"
        android:background="@drawable/ic_splash_logo_white_bg"
        android:contentDescription="@string/txt_splash_white"
        android:rotation="-90"
        android:scaleX="0.3"
        android:scaleY="0.3"
        app:layout_constraintBottom_toBottomOf="@id/splashLineImageView"
        app:layout_constraintEnd_toEndOf="@id/splashLineImageView"
        app:layout_constraintStart_toStartOf="@id/splashLineImageView"
        app:layout_constraintTop_toTopOf="@id/splashLineImageView" />
    
    <ImageView
        android:id="@+id/splashLogoImageView"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:alpha="0.3"
        android:contentDescription="@string/txt_splash_logo"
        android:src="@drawable/ic_toffee"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/splashLineImageView"
        app:layout_constraintEnd_toEndOf="@id/splashLineImageView"
        app:layout_constraintStart_toStartOf="@id/splashLineImageView"
        app:layout_constraintTop_toTopOf="@id/splashLineImageView" />
    
    <ImageView
        android:id="@+id/splashLogoTitleImageView"
        android:layout_width="126dp"
        android:layout_height="22dp"
        android:layout_marginTop="12dp"
        android:alpha="0.3"
        android:background="@drawable/ic_logo_title"
        android:contentDescription="@string/txt_splash_logo_title"
        app:layout_constraintEnd_toEndOf="@id/splashLogoImageView"
        app:layout_constraintStart_toStartOf="@id/splashLogoImageView"
        app:layout_constraintTop_toBottomOf="@id/splashLogoImageView" />
    
    <TextView
        android:id="@+id/freeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:alpha="0.5"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Watch FREE\non Any Network!"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splashLineImageView" />

</androidx.constraintlayout.motion.widget.MotionLayout>





