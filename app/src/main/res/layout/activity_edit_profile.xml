<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="profileForm"
            type="com.banglalink.toffee.ui.profile.EditProfileForm" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg_white"
        android:fitsSystemWindows="true"
        tools:context=".ui.profile.EditProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/CustomToolBarStyle"/>
            </com.google.android.material.appbar.AppBarLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <include
                        bind:profileForm="@{profileForm}"
                        android:id="@+id/profile_edit_layout"
                        layout="@layout/profile_edit_layout" />
                    
                        <EditText
                            android:id="@+id/name_et"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/single_line_input_text_height"
                            android:drawableStart="@mipmap/ic_user"
                            android:drawablePadding="10dp"
                            android:background="@drawable/single_line_input_text_bg"
                            android:autofillHints="Name"
                            android:hint="Name"
                            style="@style/textInputEditText2"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="14sp"
                            android:textColor="@color/cardTitleColor"
                            android:layout_marginTop="32dp"
                            android:layout_marginBottom="8dp"
                            android:text="@={profileForm.fullName}"
                            android:inputType="textCapWords"/>

                    <TextView
                        android:id="@+id/mobile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/single_line_input_text_height"
                        android:background="@drawable/single_line_input_text_bg"
                        app:drawableStartCompat="@mipmap/ic_phone"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        android:enabled="false"
                        android:textColor="@color/main_text_color"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:text="@={profileForm.phoneNo}"
                        tools:text="+8801776198791"/>

                        <EditText
                            android:id="@+id/email_et"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/single_line_input_text_height"
                            android:background="@drawable/single_line_input_text_bg"
                            android:drawableStart="@mipmap/ic_email"
                            android:drawablePadding="10dp"
                            style="@style/textInputEditText2"
                            android:autofillHints="Enter your email"
                            android:hint="Enter your email"
                            android:textColor="@color/cardTitleColor"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginVertical="8dp"
                            android:text="@={profileForm.email}"
                            android:inputType="textEmailAddress"/>

                        <EditText
                            android:id="@+id/address_et"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/single_line_input_text_height"
                            android:drawableStart="@mipmap/ic_location"
                            android:drawablePadding="10dp"
                            style="@style/textInputEditText2"
                            android:background="@drawable/single_line_input_text_bg"
                            android:hint="Enter your address"
                            android:autofillHints="Enter your address"
                            android:textColor="@color/cardTitleColor"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginVertical="8dp"
                            android:text="@={profileForm.address}"
                            android:inputType="textPostalAddress"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="56dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cancel_btn"
                            style="@style/Button2Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAllCaps="true"
                            android:text="@string/cancel"
                            android:textSize="16sp">
                        </TextView>

                        <TextView
                            android:id="@+id/save_button"
                            style="@style/Button1Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/save_changes"
                            android:textAllCaps="true"
                            android:textSize="16sp">
                        </TextView>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
