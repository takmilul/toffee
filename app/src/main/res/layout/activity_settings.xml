<!--                <com.google.android.material.switchmaterial.SwitchMaterial-->
<!--                    android:id="@+id/darkThemeToggleBtn"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:layout_constraintBottom_toBottomOf="@id/themeLabelTextView"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toEndOf="@id/themeLabelTextView"-->
<!--                    app:layout_constraintTop_toTopOf="@id/themeLabelTextView"-->
<!--                    app:thumbTint="@color/switch_thumb_color"-->
<!--                    app:trackTint="@color/switch_track_color"/>-->

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/profile_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{defaultDataQuality? View.GONE : View.VISIBLE}"
                    app:constraint_referenced_ids="wifiProfileTextView,wifi_profile_status_tv,wifi_profile_state_bar,wifi_profile_desc_txt,textView2,watchOnlyWifiToggleBtn" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/cellular_profile_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{defaultDataQuality || watchWifiOnly ? View.GONE : View.VISIBLE}"
                    app:constraint_referenced_ids="cellularProfileTextView,cellular_profile_status_tv,cellular_profile_state_bar,cellular_profile_desc_txt" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/colorButtonInActive" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        style="@style/PrefItemStyle"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_background_playback" />
                        <TextView
                            style="@style/PrefItemTextStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Play From Background" />
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/colorAccent"
                            android:checked="true" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/colorButtonInActive" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        style="@style/PrefItemStyle"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_transition_anim" />
                        <TextView
                            style="@style/PrefItemTextStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Allow Animation Transition" />
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/allowTransitionAnimationCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/colorAccent"
                            android:checked="true" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/colorButtonInActive" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/pref_clear_search"
                        style="@style/PrefItemStyle"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_clear_search_pref" />
                        <TextView
                            style="@style/PrefItemTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clear Search History" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/colorButtonInActive" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/pref_clear_watch"
                        style="@style/PrefItemStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_clear_watch_pref" />
                        <TextView
                            style="@style/PrefItemTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clear Watch History" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/colorButtonInActive" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/pref_terms"
                        style="@style/PrefItemStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_pref_terms" />
                        <TextView
                            style="@style/PrefItemTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms &amp; Conditions" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/colorButtonInActive"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/pref_privacy"
                        style="@style/PrefItemStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_pref_privacy" />
                        <TextView
                            style="@style/PrefItemTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Privacy Policy" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/colorButtonInActive" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        style="@style/PrefItemStyle"
                        android:id="@+id/pref_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_pref_about" />
                        <TextView
                            style="@style/PrefItemTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
</layout>
