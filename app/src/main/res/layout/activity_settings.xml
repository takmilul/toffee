<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="defaultDataQuality"
            type="Boolean" />

        <variable
            name="watchWifiOnly"
            type="Boolean" />

        <variable
            name="enableNotification"
            type="boolean" />
        <!--<variable
            name="viewModel"
            type="com.banglalink.toffee.ui.settings.SettingsViewModel" />-->
    </data>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fitsSystemWindows="true">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:animateLayoutChanges="true"
                    android:background="@color/screen_bg"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        style="@style/PrefItemStyle"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_menu_notification" />
                        <TextView
                            style="@style/PrefItemTextStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Notifications" />
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/notificationSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/colorAccent"
                            android:checked="@{enableNotification}" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/colorButtonInActive" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView15"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_pref_video_settings" />

                            <TextView
                                android:id="@+id/dateQualityTextView"
                                style="@style/PrefItemTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="@string/default_settings"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView15"
                                app:layout_constraintEnd_toStartOf="@id/dataQualityToggleBtn"
                                app:layout_constraintStart_toEndOf="@+id/imageView15"
                                app:layout_constraintTop_toTopOf="@+id/imageView15" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/dataQualityToggleBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                app:layout_constraintBottom_toBottomOf="@id/dateQualityTextView"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/dateQualityTextView"
                                app:layout_constraintTop_toTopOf="@id/dateQualityTextView"
                                android:checked="@{defaultDataQuality}"
                                android:buttonTint="@color/colorAccent" />

                            <TextView
                                android:id="@+id/wifiProfileTextView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginStart="0dp"
                                style="@style/PrefItemTextStyle"
                                android:text="Wi-Fi Profile"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/dateQualityTextView" />

                        <TextView
                            android:id="@+id/wifi_profile_status_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/main_text_color"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2"
                            tools:text="Video Resolution: 1280x720" />

                        <androidx.appcompat.widget.AppCompatSeekBar
                                android:id="@+id/wifi_profile_state_bar"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:max="5"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/wifi_profile_status_tv" />

                            <TextView
                                android:id="@+id/wifi_profile_desc_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/second_text_color"
                                app:layout_constraintEnd_toEndOf="@id/wifi_profile_state_bar"
                                app:layout_constraintStart_toStartOf="@id/wifi_profile_state_bar"
                                app:layout_constraintTop_toBottomOf="@id/wifi_profile_state_bar"
                                tools:text="Need 1 Mbps Connection" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Watch only when Wifi is available"
                            android:textColor="@color/main_text_color"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@id/watchOnlyWifiToggleBtn"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/wifiProfileTextView" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/watchOnlyWifiToggleBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                app:layout_constraintBottom_toBottomOf="@id/textView2"
                                app:layout_constraintEnd_toEndOf="@id/dataQualityToggleBtn"
                                app:layout_constraintStart_toEndOf="@id/textView2"
                                app:layout_constraintTop_toTopOf="@id/textView2"
                                android:buttonTint="@color/colorAccent"
                                android:checked="@{watchWifiOnly}" />

                        <TextView
                            android:id="@+id/cellularProfileTextView"
                            style="@style/PrefItemTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="0dp"
                            android:text="Mobile Data Profile"
                            app:layout_constraintEnd_toEndOf="@id/wifi_profile_desc_txt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/wifi_profile_desc_txt" />

                            <TextView
                                android:id="@+id/cellular_profile_status_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/main_text_color"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/cellularProfileTextView"
                                tools:text="Video Resolution: 1280x720" />

                            <androidx.appcompat.widget.AppCompatSeekBar
                                android:id="@+id/cellular_profile_state_bar"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:max="4"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/cellular_profile_status_tv" />

                        <TextView
                            android:id="@+id/cellular_profile_desc_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Need 1 Mbps Connection"
                            android:textColor="@color/second_text_color"
                            app:layout_constraintEnd_toEndOf="@id/cellular_profile_state_bar"
                            app:layout_constraintStart_toStartOf="@id/cellular_profile_state_bar"
                            app:layout_constraintTop_toBottomOf="@id/cellular_profile_state_bar" />

<!--                <TextView-->
<!--                    android:id="@+id/themeLabelTextView"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="16dp"-->
<!--                    android:fontFamily="@font/roboto_regular"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:text="Dark Theme"-->
<!--                    android:textSize="16sp"-->
<!--                    android:textColor="@color/main_text_color"-->
<!--                    app:layout_constraintEnd_toStartOf="@id/darkThemeToggleBtn"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
