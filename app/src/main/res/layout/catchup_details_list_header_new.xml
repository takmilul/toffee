<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import type="android.view.View" />
        <variable
            name="data"
            type="com.banglalink.toffee.model.ChannelInfo" />
        <variable
            name="callback"
            type="com.banglalink.toffee.ui.common.ContentReactionCallback" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/program_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="2"
            android:text="@{data.program_name}"
            android:textColor="@color/main_text_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/options"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView"
            tools:text="NOW: ICC Women's World Cup 2019
Day 21 - AUS vs IND" />


        <ImageView
            android:id="@+id/options"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{(v)->callback.onOpenMenu(v,data)}"
            android:padding="4dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="@+id/program_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/program_name"
            app:srcCompat="@drawable/ic_menu_more" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            loadImageFromUrlRounded="@{data.channelProfileUrl}"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="@{()-> callback.onProviderIconClicked(data)}"
            tools:src="@drawable/ic_profile_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shareCount" />

        <TextView
            android:id="@+id/liveStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="4dp"
            android:text="LIVE"
            android:textStyle="bold"
            android:visibility="gone"
            app:drawableLeftCompat="@drawable/ic_live_red"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shareCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="4dp"
            android:text="@{data.formatedShareCount()}"
            android:onClick="@{(v)-> callback.onShareClicked(v, data)}"
            app:drawableLeftCompat="@drawable/ic_share"
            app:layout_constraintEnd_toStartOf="@id/reactionCount"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/liveStatus"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10.1K" />
        <!--            android:text="@{data.live ? @string/live_watching_text(data.formatted_view_count) : data.formatted_view_count}"-->

        <TextView
            android:id="@+id/reactionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            bindEmoCount="@{data}"
            app:drawableLeftCompat="@drawable/ic_reactions_emo"
            app:layout_constraintBottom_toBottomOf="@+id/shareCount"
            app:layout_constraintEnd_toStartOf="@+id/reactionButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/shareCount"
            app:layout_constraintTop_toTopOf="@+id/shareCount"
            tools:text="21K" />

        <TextView
            android:id="@+id/reactionButton"
            loadReactionEmo="@{data.myReaction}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="Reaction"
            android:onClick="@{(v) -> callback.onReactionClicked(v, reactionCount, data)}"
            app:drawableLeftCompat="@drawable/ic_reaction_love_empty"
            app:layout_constraintBottom_toBottomOf="@+id/shareCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/reactionCount"
            app:layout_constraintTop_toTopOf="@+id/shareCount"
            app:layout_constraintVertical_bias="0.0"
            tools:text="32.5K" />

        <TextView
            android:id="@+id/providerName"
            style="@style/TitleBoldTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="false"
            android:ellipsize="end"
            android:enabled="false"
            android:focusable="false"
            android:maxLines="1"
            android:text="@{data.content_provider_name}"
            app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
            app:layout_constraintEnd_toStartOf="@+id/channelSubCount"
            app:layout_constraintStart_toEndOf="@+id/circleImageView"
            app:layout_constraintTop_toTopOf="@+id/circleImageView"
            tools:text="Banglalink" />

        <com.banglalink.toffee.ui.widget.MultiTextButton
            android:id="@+id/subscribe_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:onClick="@{(v)-> callback.onSubscribeButtonClicked(v, data)}"
            bindSubscriptionStatus="@{data.isSubscribed == 1}"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/circleImageView" />

        <TextView
            android:id="@+id/channelSubCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{data.formattedSubscriberCount}"
            app:layout_constraintBottom_toBottomOf="@+id/subscribe_button"
            app:layout_constraintEnd_toStartOf="@+id/subscribe_button"
            app:layout_constraintTop_toTopOf="@+id/subscribe_button" />

        <FrameLayout
            android:id="@+id/relatedContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="48dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/program_name" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/channelDetailsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="program_name,circleImageView,reactionCount,reactionButton,providerName,shareCount" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="shareCount,reactionCount,reactionButton" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/tvExcludeList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{data.live ? View.GONE : View.VISIBLE}"
            app:constraint_referenced_ids="options,program_name,reactionButton,reactionCount,shareCount,channelSubCount,subscribe_button,video_description" />

        <com.banglalink.toffee.ui.widget.ExpandableTextView
            android:id="@+id/video_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:text="@{data.description}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/program_name"
            tools:text="Hello world!" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/autoplay_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Autoplay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_description" />

        <TextView
            android:id="@+id/bottom_panel_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/autoplay_switch"
            app:layout_constraintEnd_toStartOf="@+id/autoplay_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/autoplay_switch" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
