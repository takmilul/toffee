<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/signin_navigation.xml"
    app:startDestination="@id/signInContentFragment">
    <fragment
        android:id="@+id/signInContentFragment"
        android:name="com.banglalink.toffee.ui.login.SignInContentFragment"
        android:label="SigninByPhoneBodyFragment" >
        <action
            android:id="@+id/action_signInContentFragment_to_verifySignInFragment"
            app:destination="@id/verifySignInFragment"
            app:popEnterAnim="@anim/slide_left_to_center" />
    </fragment>
    <fragment
        android:id="@+id/verifySignInFragment"
        android:name="com.banglalink.toffee.ui.verify.VerifySignInFragment"
        android:label="VerifySigninFragment" >
        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <argument
            android:name="referralCode"
            app:argType="string" />
        <argument
            android:name="regSessionToken"
            app:argType="string" />
        <action
            android:id="@+id/action_verifySignInFragment_to_userInterestFragment"
            app:destination="@id/userInterestFragment" />
    </fragment>
    <fragment
        android:id="@+id/userInterestFragment"
        android:name="com.banglalink.toffee.ui.userinterest.UserInterestFragment"
        android:label="Search" >
        <argument
            android:name="verifiedUserData"
            app:argType="com.banglalink.toffee.model.CustomerInfoSignIn"
            app:nullable="true" />
    </fragment>
</navigation>