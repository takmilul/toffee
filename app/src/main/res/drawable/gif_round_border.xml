<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/content_loader" />
    <item>
        <shape android:shape="oval">
            <corners android:radius="1000dp" />
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1.5dp"
                android:color="@color/fixed_second_text_color" />
            <padding
                android:bottom="1.5dp"
                android:left="1.5dp"
                android:right="1.5dp"
                android:top="1.5dp" />
        </shape>
    </item>
</layer-list>