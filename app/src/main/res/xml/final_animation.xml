<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="1000">
    </Transition>

    <ConstraintSet android:id="@+id/start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/splashLineImageView"
            android:layout_width="340dp"
            android:layout_height="292dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/topView"
            motion:layout_constraintBottom_toBottomOf="@id/topView" />

        <Constraint
            android:id="@+id/splashPinkImageView"
            android:layout_width="336dp"
            android:layout_height="320dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            motion:layout_constraintBottom_toBottomOf="@id/splashLineImageView"
            motion:layout_constraintEnd_toEndOf="@id/splashLineImageView"
            motion:layout_constraintStart_toStartOf="@id/splashLineImageView"
            motion:layout_constraintTop_toTopOf="@id/splashLineImageView" />

        <Constraint
            android:id="@+id/splashWhiteImageView"
            android:layout_width="272dp"
            android:layout_height="264dp"
            android:layout_marginTop="16dp"
            motion:layout_constraintBottom_toBottomOf="@id/splashLineImageView"
            motion:layout_constraintEnd_toEndOf="@id/splashLineImageView"
            motion:layout_constraintStart_toStartOf="@id/splashLineImageView"
            motion:layout_constraintTop_toTopOf="@id/splashLineImageView" />

        <Constraint
            android:id="@+id/splashLogoImageView"
            android:layout_width="90dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            motion:layout_constraintBottom_toBottomOf="@id/splashLineImageView"
            motion:layout_constraintEnd_toEndOf="@id/splashLineImageView"
            motion:layout_constraintStart_toStartOf="@id/splashLineImageView"
            motion:layout_constraintTop_toTopOf="@id/splashLineImageView" />

        <Constraint
            android:id="@id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:layout_marginTop="20dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/splashLineImageView" />

    </ConstraintSet>


    <Transition
        motion:constraintSetEnd="@+id/fourth"
        motion:constraintSetStart="@id/third"
        motion:autoTransition="animateToEnd"
        motion:duration="1000">

        <KeyFrameSet >
            <KeyPosition
                motion:motionTarget="@+id/text_tv"
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:percentX="1.05" />
            <KeyPosition
                motion:motionTarget="@+id/code_number"
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:percentX="1.05" />
            <KeyPosition
                motion:motionTarget="@+id/resend"
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:percentX="1.05" />
            <KeyPosition
                motion:motionTarget="@+id/confirm_btn"
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:percentX="1.05" />
            <KeyPosition
                motion:motionTarget="@+id/countdown_tv"
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:percentX="1.05" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/third">
        <Constraint
            android:id="@+id/resend"
            style="@style/BgToggleButtonStyleRingAccent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Resend"
            android:textColor="@color/accent_to_pink_color"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/code_number" >
            <PropertySet
                android:visibility="gone"
                motion:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/fourth">

        <Constraint
            android:id="@+id/text_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/enter_code"
            android:textColor="@color/main_text_color"
            android:textSize="26sp"
            motion:layout_constraintVertical_bias="0.3"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/code_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/single_line_input_text_bg"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/otp_hint"
            android:inputType="phone"
            motion:layout_constraintTop_toBottomOf="@+id/text_tv"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/resend"
            style="@style/BgToggleButtonStyleRingAccent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Resend"
            android:textColor="@color/accent_to_pink_color"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@id/code_number"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" >
            <PropertySet
                android:visibility="gone"
                motion:visibilityMode="ignore"/>
        </Constraint>

        <Constraint
            android:id="@+id/confirm_btn"
            style="@style/ButtonStyleSolidPink"
            android:layout_width="@dimen/button_accent_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/sign_in_text"
            android:textAllCaps="true"
            motion:layout_constraintTop_toBottomOf="@+id/resend"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/countdown_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:textColor="@color/main_text_color"
            android:visibility="visible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/confirm_btn"/>

    </ConstraintSet>
</MotionScene>