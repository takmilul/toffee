<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1200">

        <KeyFrameSet>
            <KeyAttribute
                android:rotation="0"
                motion:framePosition="75"
                motion:motionTarget="@+id/splashPinkImageView" />
            <KeyAttribute
                android:rotation="0"
                motion:framePosition="75"
                motion:motionTarget="@+id/splashWhiteImageView" />
            <KeyAttribute
                android:rotation="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/splashPinkImageView" />
            <KeyAttribute
                android:rotation="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/splashWhiteImageView" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/splashLineImageView" />
            <KeyAttribute
                android:scaleX="1.01"
                android:scaleY="1.01"
                motion:framePosition="75"
                motion:motionTarget="@+id/splashLineImageView" />
            <KeyAttribute
                android:scaleX="0.2"
                android:scaleY="0.2"
                motion:framePosition="0"
                motion:motionTarget="@+id/splashLineImageView" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/splashPinkImageView" />
            <KeyAttribute
                android:scaleX="1.01"
                android:scaleY="1.01"
                motion:framePosition="75"
                motion:motionTarget="@+id/splashPinkImageView" />
            <KeyAttribute
                android:scaleX="0.3"
                android:scaleY="0.3"
                motion:framePosition="0"
                motion:motionTarget="@+id/splashPinkImageView" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/splashWhiteImageView" />
            <KeyAttribute
                android:scaleX="1.01"
                android:scaleY="1.01"
                motion:framePosition="75"
                motion:motionTarget="@+id/splashWhiteImageView" />
            <KeyAttribute
                android:scaleX="0.3"
                android:scaleY="0.3"
                motion:framePosition="0"
                motion:motionTarget="@+id/splashWhiteImageView" />
            <KeyPosition
                motion:framePosition="40"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/splashLogoImageView"
                motion:percentX="0.54"
                motion:percentY="1.2" />
            <KeyPosition
                motion:framePosition="75"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/splashLineImageView"
                motion:percentX="0.3"
                motion:percentY="0.4" />
            <KeyPosition
                motion:framePosition="75"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/splashPinkImageView"
                motion:percentX="0"
                motion:percentY="0.4" />
            <KeyPosition
                motion:framePosition="75"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/splashWhiteImageView"
                motion:percentX="0.60"
                motion:percentY="0.4" />
            <KeyPosition
                motion:framePosition="75"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/splashLogoImageView"
                motion:percentX="0.525"
                motion:percentY="0.5" />
        </KeyFrameSet>
        <OnClick motion:targetId="@+id/button" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end"
        motion:transitionEasing="decelerate">

        <Constraint
            android:id="@+id/splashLineImageView"
            android:layout_width="448dp"
            android:layout_height="400dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        
    </ConstraintSet>
</MotionScene>