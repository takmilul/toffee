<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="1000">

        <KeyFrameSet >
            <KeyPosition
                motion:motionTarget="@+id/text_tv"
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:percentX="1.05" />
            <KeyPosition
                motion:motionTarget="@+id/code_number"
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:percentX="1.05" />
            <KeyPosition
                motion:motionTarget="@+id/resend"
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:percentX="1.05" />
            <KeyPosition
                motion:motionTarget="@+id/confirm_btn"
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:percentX="1.05" />
            <KeyPosition
                motion:motionTarget="@+id/countdown_tv"
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:percentX="1.05" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/text_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/enter_code"
            android:textColor="@color/main_text_color"
            android:textSize="26sp"
            motion:layout_constraintVertical_bias="0.3"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        
        <Constraint
            android:id="@+id/code_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/single_line_input_text_bg"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/otp_hint"
            android:inputType="phone"
            motion:layout_constraintTop_toBottomOf="@+id/text_tv"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        
        <Constraint
            android:id="@+id/resend"
            style="@style/BgToggleButtonStyleRingAccent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Resend"
            android:textColor="@color/accent_to_pink_color"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@id/code_number"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        
        <Constraint
            android:id="@+id/confirm_btn"
            style="@style/ButtonStyleSolidPink"
            android:layout_width="@dimen/button_accent_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/sign_in_text"
            android:textAllCaps="true"
            motion:layout_constraintTop_toBottomOf="@+id/resend"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        
        <Constraint
            android:id="@+id/countdown_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:textColor="@color/main_text_color"
            android:visibility="visible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/confirm_btn"/>
        
    </ConstraintSet>
</MotionScene>