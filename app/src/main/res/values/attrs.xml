<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="dragger_layout">
        <attr name="top_view_id" format="reference"/>
        <attr name="bottom_view_id" format="reference"/>
    </declare-styleable>

    <declare-styleable name="StateProgressBar">

        <attr name="spb_stateBackgroundColor" format="color" />
        <attr name="spb_stateForegroundColor" format="color" />

        <attr name="spb_stateNumberBackgroundColor" format="color" />
        <attr name="spb_stateNumberForegroundColor" format="color" />

        <attr name="spb_currentStateDescriptionColor" format="color" />
        <attr name="spb_stateDescriptionColor" format="color" />

        <attr name="spb_stateSize" format="dimension" />

        <attr name="spb_stateTextSize" format="dimension" />

        <attr name="spb_stateDescriptionSize" format="dimension" />

        <attr name="spb_stateLineThickness" format="dimension" />

        <attr name="spb_checkStateCompleted" format="boolean" />


        <attr name="spb_animateToCurrentProgressState" format="boolean" />

        <attr name="spb_enableAllStatesCompleted" format="boolean" />

        <attr name="spb_descriptionTopSpaceDecrementer" format="dimension" />

        <attr name="spb_descriptionTopSpaceIncrementer" format="dimension" />

        <attr name="spb_animationDuration" format="integer" />

        <attr name="spb_animationStartDelay" format="integer" />


        <attr name="spb_currentStateNumber" format="enum">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
            <enum name="six" value="6" />
        </attr>


        <attr name="spb_maxStateNumber" format="enum">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
            <enum name="six" value="6" />
        </attr>

    </declare-styleable>

    <declare-styleable name="ReadMoreTextView">
        <attr name="readMoreExpandedText" format="string" />
        <attr name="readMoreCollapsedText" format="string" />
        <attr name="readMoreLength" format="integer" />
        <attr name="showReadMoreExpandedText" format="boolean" />
        <attr name="readMoreColorClickableText" format="color" />
        <attr name="readMoreTextLines" format="integer" />
        <attr name="readMoreTextSize" format="dimension" />
        <attr name="readMoreFontFamily" format="reference" />
        <attr name="readMoreMode">
            <enum name="readMoreModeLine" value="0"/>
            <enum name="readMoreModeLength" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PlayerOverlayView">
        <attr name="playerView" format="reference" />
        <attr name="seekSeconds" format="integer" />
        <attr name="animationDuration" format="integer" />
        <attr name="iconAnimationDuration" format="integer" />
        <attr name="arcSize" format="dimension" />
        <attr name="tapCircleColor" format="color" />
        <attr name="backgroundCircleColor" format="color" />

        <attr name="textAppearance" format="reference" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="MultiTextButton">
        <attr name="multitext_layout_width" format="dimension" />
        <attr name="multitext_layout_height" format="dimension" />
        <attr name="multitext_textSize" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="RatioImageView">
        <attr name="aspectRatio" format="string" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
</resources>