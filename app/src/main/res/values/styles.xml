<resources>
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    
    <style name="TabTheme">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#29466B</item>
        <item name="android:includeFontPadding">false</item>
    
    </style>
    
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    
    <style name="CustomToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/main_text_color</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.DayNight</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:background">@color/tool_bar_color</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    
    
    <style name="toffeeButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@drawable/button1_text_selector</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
    <style name="Button1Style">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@drawable/button1_text_selector</item>
    </style>
    
    <style name="Button2Style">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@drawable/button2_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minWidth">110dp</item>
        
        <item name="android:fontFamily">@font/roboto_bold</item>
        
        <item name="android:textColor">@drawable/button2_text_selector</item>
    </style>
    
    
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    
    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    
    <style name="CategoryTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="ViewAllTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/view_all_text_color</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    
    <style name="textInputEditText2" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textColorHint">@color/second_text_color</item>
        <item name="android:background">@color/input_bg_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="editTextOval" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textColorHint">@color/second_text_color</item>
        <item name="android:background">@drawable/editfield_oval_bg_white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="editTextSearch" parent="editTextOval">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    
    <style name="programNameTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    
    </style>
    
    <style name="subscription_pack_header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="subscripton_pack_channel_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="purchase_text_style">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="SubscribePackButtonStyle" parent="Button1Style">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="SubscribePackButtonStyle2" parent="SubscribePackButtonStyle">
        <item name="android:background">@drawable/button_selector_ring</item>
        <item name="android:textColor">@drawable/button_text_selector_ring</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    
    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>
    
    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    
    <!--    <style name="PlayerTheme.Spherical">-->
    <!--        <item name="surface_type">spherical_gl_surface_view</item>-->
    <!--    </style>-->
    
    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleBoldTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>
    
    <style name="TitleTextStyleLight" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="UploadHeadingStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#29466B</item>
    </style>
    
    <style name="ToffeeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="UploadButtonStyleV2" parent="ToffeeButtonStyle">
        <item name="backgroundTint">@color/colorAccent2</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:textSize">18sp</item>
        <item name="iconPadding">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">#ffffff</item>
        <item name="rippleColor">#777777</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="ButtonStyleSolidPink" parent="ToffeeButtonStyle">
        <item name="backgroundTint">@color/button_bgcolor_pink</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="ButtonStyleSolidPurple" parent="ToffeeButtonStyle">
        <item name="backgroundTint">@color/button_bgcolor_purple</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="ButtonStyleRingPurple" parent="ToffeeButtonStyle">
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/colorButtonSecondary</item>
        <item name="strokeColor">@color/button_bgcolor_purple</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:textColor">@color/colorButtonSecondary</item>
    </style>
    
    <style name="ButtonStyleRingPink" parent="ToffeeButtonStyle">
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/colorAccent2</item>
        <item name="strokeColor">@color/button_bgcolor_pink</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:textColor">@color/colorAccent2</item>
    </style>

    <style name="ButtonStyleRingWhite" parent="ToffeeButtonStyle">
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/colorAccent2</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="ButtonStyleRingAccent" parent="ToffeeButtonStyle">
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/darker_gray</item>
        <item name="strokeColor">@color/button_bgcolor_accent</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:textColor">@color/colorButtonSecondary</item>
    </style>
    
    <style name="followButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/category_button_selector</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    
    <style name="CustomRatingBarStyle" parent="@style/Base.Widget.AppCompat.RatingBar">
<!--        <item name="colorControlNormal">@color/ratingIconColor</item>-->
<!--        <item name="colorControlActivated">@color/browser_actions_bg_grey</item>-->
<!--        <item name="android:progressDrawable">@drawable/rating_bar</item>-->
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>
    
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    
    
    <style name="BgToggleButtonStyleSolidPink" parent="ToffeeButtonStyle">
        <item name="backgroundTint">@color/pink_to_white_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/pink_to_accent_color</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:minWidth">110dp</item>
    </style>

    <style name="BgToggleButtonStyleRingAccent" parent="ToffeeButtonStyle">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/accent_to_pink_color</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:minWidth">110dp</item>
    </style>

    <style name="ScrollBarStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
    </style>

    <style name="NavigationMenuStyle" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@color/side_menu_color_selector</item>
        <item name="itemTextColor">@color/side_menu_color_selector</item>
        <item name="itemIconPadding">16dp</item>
    </style>

    <style name="PrefItemTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="PrefItemStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
</resources>
